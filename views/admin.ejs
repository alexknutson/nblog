<% include head %>

<% if (flash){ %>
    <div class="alert alert-success">
        <strong>Success</strong> <%= flash %>.
    </div>
<% } %>
<h4>Preferences</h4>
<div class="btn-group">
    <a class="btn" href="/preferences">Edit Preferences</a>
    <a class="btn" href="/add">New Article</a>
</div>
<h4>Existing articles</h4>
<table class="table table-hover">
    <tbody>
    <% articles.forEach(function(article) { %>
        <tr>
            <td><%= article.title %></td>
            <td><%= moment(new Date(article.ts)).format("Do MMM YYYY") %></td>
            <td>
                <div class="btn-group">
                <form method="GET" action="/edit" class="edit_form" style="display:inline">
                    <input type="submit" value="Edit" class="btn" />
                    <input type="hidden" name="id" value="<%= article._id %>" class="btn">
                </form>
                <form method="GET" action="/del" class="edit_form" style="display:inline;margin:0 10px">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <input type="hidden" name="id" value="<%= article._id %>">
                </form>
                </div>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>

<% include foot %>